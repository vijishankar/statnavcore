@model IEnumerable<StatNav.WebApplication.Models.VariantVM>

<table class="table">
    <caption>List of Experiment Variants</caption>
    <tr>
        @if (ViewBag.Sortable != null)
        {
            <th scope="col">
                <a asp-controller="Variant"
                   asp-action="Index" asp-route-sortOrder="@ViewBag.IdSortParm" asp-route-searchString="@ViewBag.SearchString">ID <span class="glyphicon glyphicon-sort"></span></a>
            </th>
            <th scope="col">
                <a asp-controller="Variant"
                   asp-action="Index" asp-route-sortOrder="@ViewBag.NameSortParm" asp-route-searchString="@ViewBag.SearchString">Variant Name <span class="glyphicon glyphicon-sort"></span></a>
            </th>

        }
        else
        {
            <th scope="col">
                ID
            </th>
            <th scope="col">
                Variant Name
            </th>
        }

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                <a asp-controller="Variant" asp-action="Edit" asp-route-id="@item.Id">@item.VariantName</a>
            </td>
        </tr>
    }

</table>
