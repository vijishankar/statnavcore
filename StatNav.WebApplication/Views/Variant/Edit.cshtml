@model StatNav.WebApplication.Models.VariantVM

@{
    String action = ViewBag.Action;
}

        <form asp-controller="Variant" method="post">
            <div class="form-horizontal">
                <partial name="_SaveButton" />
                <h4>@action Experiment Variant</h4>
                <hr />
                <partial name="_Confirmation" />

                <p>&nbsp;</p>
                <div asp-validation-summary="None" class="text-danger"></div>
                <input asp-for="@Model.Id" hidden />
                @if (action == "Edit")
                {
                    <div class="form-group">
                        <label asp-for="@Model.Id" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="@Model.Id" class="form-control" disabled="disabled" />
                            <span asp-validation-for="@Model.Id" class="text-danger"></span>
                        </div>
                    </div>
                }
                <div class="form-group">
                    <label asp-for="@Model.ExperimentId" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <select asp-for="@Model.ExperimentId" data-val-number="The Experiment field is required.."
                                asp-items="@(new SelectList(ViewBag.Experiments,"Id","ExperimentName"))" class="form-control">
                            <option>Please Select...</option>
                        </select>
                        <span asp-validation-for="@Model.ExperimentId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.VariantName" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="@Model.VariantName" class="form-control" />
                        <span asp-validation-for="@Model.VariantName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.Control" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="@Model.Control" class="form-control" />
                        <span asp-validation-for="@Model.Control" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.VariantTargetMetricModelId" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <select asp-for="@Model.VariantTargetMetricModelId" data-val-number="The Target Metric field is required.."
                                asp-items="@(new SelectList(ViewBag.MetricModels,"Id","Title"))" class="form-control">
                            <option>Please select...</option>
                        </select>
                        <span asp-validation-for="@Model.VariantTargetMetricModelId" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.TargetMet" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="@Model.TargetMet" class="form-control" />
                        <span asp-validation-for="@Model.TargetMet" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="@Model.VariantImpactMetricModelId" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <select asp-for="@Model.VariantImpactMetricModelId"
                                asp-items="@(new SelectList(ViewBag.MetricModels,"Id","Title"))" class="form-control">
                        </select>
                        <span asp-validation-for="@Model.VariantImpactMetricModelId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.ImpactMet" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="@Model.ImpactMet" class="form-control" />
                        <span asp-validation-for="@Model.ImpactMet" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </form>
        @if (action == "Edit")
        {
            <div>
                <a asp-controller="Variant" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
            </div>
        }
