@model StatNav.WebApplication.Models.MarketingModelVM

@{
    String action = ViewBag.Action;
}
<div class="row">
    <div class="col-md-6">
        <form asp-controller="MarketingModel" method="post">
            <div class="form-horizontal">
                <h4>@action Marketing Model</h4>
                @if (action == "Create")
                {
                    <partial name="_SaveButton" />
                }
                <hr />
                <partial name="_Confirmation" />
                <p>&nbsp;</p>
                <div asp-validation-summary="None" class="text-danger"></div>
                <input asp-for="@Model.Id" hidden />
                @if (action == "Edit")
                {
                    <div class="form-group">
                        <label asp-for="@Model.Id" class="control-label col-md-2"></label>
                        <div class="col-md-10">
                            <input asp-for="@Model.Id" class="form-control" disabled="disabled" />
                        </div>
                    </div>
                }
                <div class="form-group">
                    <label asp-for="@Model.ModelName" class="control-label col-md-2"></label>
                    <div class="col-md-10">
                        <input asp-for="@Model.ModelName" class="form-control" />
                        <span asp-validation-for="@Model.ModelName" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </form>
        @if (action == "Edit")
        {
            <div>
                <a asp-controller="MarketingModel" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                <a asp-controller="MarketingModel" asp-action="Index">Back to List</a>
            </div>
        }
    </div>
