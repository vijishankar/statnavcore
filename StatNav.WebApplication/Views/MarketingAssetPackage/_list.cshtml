@model IEnumerable<StatNav.WebApplication.Models.MarketingAssetPackageVM>
@{

}
<table class="table">
    <caption>List of Marketing Asset Packages</caption>
    <tr>
        @if (ViewBag.Sortable != null)
        {
            <th scope="col">
                <a asp-controller="MarketingAssetPackage" asp-action="Index" asp-route-sortOrder="@ViewBag.NameSortParm" asp-route-searchString="@ViewBag.SearchString">
                    Asset Package Name
                    <span class="glyphicon glyphicon-sort"></span>
                </a>
            </th>
        }
        else
        {
            <th scope="col">
                Package Name
            </th>
            <th scope="col">
                Hypothesis
            </th>
        }
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a asp-controller="MarketingAssetPackage" asp-action="Edit" asp-route-id="@item.Id">@item.MAPName</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hypothesis)
            </td>
        </tr>
    }

</table>
