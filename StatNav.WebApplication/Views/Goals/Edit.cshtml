@model StatNav.WebApplication.Models.GoalsVM

@{
    String action = ViewBag.Action;
}
<form asp-controller="Goals" method="post">
    <div class="form-horizontal">
        <partial name="_SaveButton" />
        <h4>@action Goals</h4>
        <hr />
        <partial name="_Confirmation" />
        <p>&nbsp;</p>
        <div asp-validation-summary="None" class="text-danger"></div>
        <input asp-for="@Model.Id" hidden />
        @if (action == "Edit")
        {
            <div class="form-group">
                <label asp-for="@Model.Id" class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input asp-for="@Model.Id" class="form-control" disabled="disabled" />
                </div>
            </div>
        }
        <div class="form-group">
            <label asp-for="@Model.GoalName" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <input asp-for="@Model.GoalName" class="form-control" />
                <span asp-validation-for="@Model.GoalName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="@Model.MetricModelStageId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <select asp-for="@Model.MetricModelStageId" data-val-number="The Stage field is required.."
                        asp-items="@(new SelectList(ViewBag.Stages,"Id","Title"))" class="form-control">
                    <option>Please Select...</option>
                </select>
                <span asp-validation-for="@Model.MetricModelStageId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="@Model.GAGoal" class="control-label col-md-2"></label>
            <div class="col-md-10">
                <textarea asp-for="@Model.GAGoal" class="form-control"></textarea>
                <span asp-validation-for="@Model.GAGoal" class="text-danger"></span>
            </div>
        </div>
    </div>
</form>
@if (action == "Edit")
{
    <div>
        <a asp-controller="Goals" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    </div>
}
